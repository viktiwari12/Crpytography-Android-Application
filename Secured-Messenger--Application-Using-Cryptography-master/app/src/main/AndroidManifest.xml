<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.securedmessagingapp">

    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SecuredMessagingApp">
        <activity android:name="StartingScreen.ForgotPassword"></activity>
        <activity android:name="StartingScreen.SpashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="TabbedActivity.GroupChatActivity" />
        <activity android:name="StartingScreen.LoginActivity"></activity>
        <activity android:name="StartingScreen.SignUpActivity" />
        <activity
            android:name="TabbedActivity.TabbedActivity"
            android:label="@string/title_activity_tabbed"
            android:theme="@style/Theme.SecuredMessagingApp.NoActionBar" />
        <activity android:name="TabbedActivity.UserChatActivity" />
    </application>

</manifest>