<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="220dp"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:background="@drawable/receivercuve"
    android:layout_marginLeft="20dp"
    android:maxWidth="330dp"
    android:maxHeight="400dp"

    android:minHeight="50dp">

    <TextView
        android:id="@+id/receivermessage"
        android:layout_width="185dp"

        android:layout_height="wrap_content"

        android:text="My name is anuj kaushik"
        android:textColor="#000000"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/receivertime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="196dp"
        android:layout_marginTop="5dp"
        android:text="10:10 am"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/receivermessage" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/whastappbackground"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/linearlayout"
        app:layout_editor_absoluteY="100dp" />





</androidx.constraintlayout.widget.ConstraintLayout>